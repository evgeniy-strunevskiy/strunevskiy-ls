.screen-menu {
  position: relative;
  width: 25px;
  height: 4px;
  border-radius: 5px;
  background: #414c63;
  display: none;
  margin-left: 30px;
  @include tablets {
    display: block;
  }
  &::after, &::before {
    position: absolute;
    content: "";
    display: block;
    width: 25px;
    height: 4px;
    border-radius: 5px;  
    background: #414c63;
  }
  &::after {
    top: 100%;
    margin-top: 5px;
  }
  &::before {
    bottom: 100%;
    margin-bottom: 5px;
  }
}